{
  "name": "@jpcarreira/next-content-toolkit",
  "version": "0.1.0",
  "description": "Reusable Next.js components and utilities for content-driven websites",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "import": "./dist/database/index.mjs",
      "require": "./dist/database/index.js"
    },
    "./analytics": {
      "types": "./dist/analytics/index.d.ts",
      "import": "./dist/analytics/index.mjs",
      "require": "./dist/analytics/index.js"
    },
    "./forms": {
      "types": "./dist/forms/index.d.ts",
      "import": "./dist/forms/index.mjs",
      "require": "./dist/forms/index.js"
    },
    "./content": {
      "types": "./dist/content/index.d.ts",
      "import": "./dist/content/index.mjs",
      "require": "./dist/content/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.mjs",
      "require": "./dist/ui/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.mjs",
      "require": "./dist/utils/index.js"
    },
    "./ads": {
      "types": "./dist/ads/index.d.ts",
      "import": "./dist/ads/index.mjs",
      "require": "./dist/ads/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "tsup.config.ts",
    "tsconfig.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build"
  },
  "keywords": [
    "nextjs",
    "react",
    "content",
    "mdx",
    "mongodb",
    "analytics",
    "newsletter"
  ],
  "author": "JoÃ£o Carreira",
  "license": "MIT",
  "peerDependencies": {
    "contentlayer2": "^0.5.0",
    "date-fns": "^4.0.0",
    "lucide-react": ">=0.400.0",
    "mongodb": "^6.0.0",
    "next": ">=14.0.0",
    "next-contentlayer2": "^0.5.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "reading-time": "^1.5.0",
    "resend": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "mongodb": {
      "optional": true
    },
    "resend": {
      "optional": true
    },
    "contentlayer2": {
      "optional": true
    },
    "next-contentlayer2": {
      "optional": true
    },
    "reading-time": {
      "optional": true
    },
    "date-fns": {
      "optional": true
    },
    "lucide-react": {
      "optional": true
    }
  },
  "dependencies": {
    "@jpcarreira/next-content-toolkit": "github:jpcarreira/next-content-toolkit",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5",
    "tsup": "^8.3.5",
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}
